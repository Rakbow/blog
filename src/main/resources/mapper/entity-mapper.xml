<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rakbow.website.dao.EntityMapper">

    <sql id="selectFields">
        entity_type, entity_id, visit_num
    </sql>

    <sql id="insertFields">
        entity_type, entity_id, visit_num
    </sql>

    <update id="updateItemStatus" keyProperty="id">
        update ${param1}
        set
        status = #{status}
        where id = #{entityId}
    </update>

    <update id="updateItemsStatus" keyProperty="id">
        update ${param1}
        set
        status = #{status}
        <where>
            id in
            <if test="ids != null and ids.size() != 0">
                <foreach item="item" index="index" collection="ids" open="("
                         close=")" separator=",">
                    #{item}
                </foreach>
            </if>
        </where>
    </update>

    <update id="updateItemDescription" keyProperty="id">
        update ${param1}
        set
        description = #{description}, edited_time = #{editedTime}
        where id = #{entityId}
    </update>

    <update id="updateItemBonus" keyProperty="id">
        update ${param1}
        set
        description = #{bonus}, edited_time = #{editedTime}
        where id = #{entityId}
    </update>

    <select id="getItemImages" resultType="string">
        select
        images
        from ${param1}
        where id = #{entityId}
    </select>

    <update id="updateItemImages" keyProperty="id">
        update ${param1}
        set
        images = #{images}, edited_time = #{editedTime}
        where id = #{entityId}
    </update>

</mapper>